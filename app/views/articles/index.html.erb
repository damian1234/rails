<h1>Posts</h1>
<%= link_to 'New Post', new_article_path %>
 <table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Actions</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= article.created_at.strftime('%b %d, %Y') %></td>
    </tr>
  <% end %>
</table>